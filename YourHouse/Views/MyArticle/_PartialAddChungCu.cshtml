@model YourHouse.Models.ModelAddArticle;

	<hr class="mt-4" />
	<div class="row">
		<div class="col-6">
			<label asp-for="BedRoom">Số phòng ngủ</label>
			<input asp-for="BedRoom" class="form-control mt-1" placeholder="Nhập số phòng ngủ" min="0" />
			<span asp-validation-for="BedRoom" class="text-danger small"></span>
		</div>
		<div class="col-6">
			<label asp-for="BathRoom">Số nhà vệ sinh</label>
			<input asp-for="BathRoom" class="form-control mt-1" placeholder="Nhập số nhà vệ sinh" min="0" />
			<span asp-validation-for="BathRoom" class="text-danger small"></span>
		</div>
		<div class="col-6 mt-3">
			<label asp-for="Floor">Tầng bao nhiêu</label>
			<input asp-for="Floor" class="form-control mt-1" placeholder="Nhập tầng" min="0" />
			<span asp-validation-for="Floor" class="text-danger small"></span>
		</div>
		<div class="col-6 mt-3">
			<label asp-for="MaxPerson">Số người tối đa</label>
			<input asp-for="MaxPerson" class="form-control mt-1" placeholder="Nhập số người tối đa" min="0" />
			<span asp-validation-for="MaxPerson" class="text-danger small"></span>
		</div>
	</div>
	<hr class="mt-4" />
	<div class="row">
		<div class="col-6 mt-3">
			<label asp-for="WaterPrice">Giá nước</label>
			<input asp-for="WaterPrice" type="number" step="0.01" class="form-control mt-1" placeholder="Nhập giá nước" min="0" />
			<span asp-validation-for="WaterPrice" class="text-danger small"></span>
		</div>
		<div class="col-6 mt-3">
			<label asp-for="ElectricPrice">Giá điện</label>
			<input asp-for="ElectricPrice" type="number" step="0.01" class="form-control mt-1" placeholder="Nhập giá điện" min="0" />
			<span asp-validation-for="ElectricPrice" class="text-danger small"></span>
		</div>
	</div>

